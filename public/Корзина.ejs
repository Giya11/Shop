      <script>
        function updatePrice(quantity, price, id) {
            let total = (quantity * price).toFixed(2); // Округляем до двух знаков после запятой
            document.getElementById(id).innerHTML = '<strong>Итого: ' + total + ' руб.</strong>';
        }

        $(document).ready(function() { 
          $('.btn-danger').click(function() { 
            let row = $(this).closest('.row'); 
            let itemId = row.data('id'); 
            let category = row.data('category'); 
            $.ajax({ 
              url: '/removeItem/' + category, 
              type: 'POST', 
              data: { 
                itemId: itemId 
              }, 
              success: function(response) { 
                if (response.success) { 
                  row.remove(); 
                } else { 
                  // обработка ошибок 
                } 
              } 
            }); 
          }); 
        });



    </script>
    
    
      
