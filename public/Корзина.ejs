        <div class="u-image u-image-circle u-image-1" alt="" data-image-width="1000" data-image-height="1500"></div>

        <%  
          let categories = { 
            'toys': 'Игрушки', 
            'clothes': 'Одежда', 
            'feeds': 'Корм', 
            'accessories': 'Аксессуары' 
          }; 
          let idCounter = 0; 
        %> 
        
        <% for(let categoryName in categories) {  
          let category = eval(categoryName); 
        %> 
          <% for(let i=0; i < category.length; i++) {  
            let currentId = 'totalPrice' + idCounter++; 
          %> 
           <div class="row border mb-3 p-3" style="border-radius: 50px; background-color: rgb(187, 191, 193);" data-id="<%= category[i].id %>" data-category="<%= categoryName %>">
              <div class="col-md-6">
                <br/>
                <h3 style="border-radius: 20px; background-color: lightgray; padding: 5px; color: dimgray;">
                  <strong><%= category[i].name %></strong>
              </h3>              
                <p><%= category[i].description %></p>
              </div>
              <div class="col-md-6">
                <div class="mb-3">
                  <br/>
                  <p>Категория: <%= categories[categoryName] %></p>
                  <p>Цена: <%= category[i].price %> руб.</p>
                  <div class="input-group mx-auto" style="width: 200px;">
                    <label class="input-group-text" for="inputGroupSelect01">Количество</label>
                    <input type="number" class="form-control" id="quantity" min="1" value="1" onchange="updatePrice(this.value, <%= category[i].price %>, '<%= currentId %>')">
                  </div>
                  <div class="mt-3">
                    <a href="#" class="btn btn-primary mr-2" data-toggle="modal" data-target="#detailsModal<%= currentId %>">Подробнее</a>
                    <a href="#" class="btn btn-danger">Убрать</a>
                    <p id="<%= currentId %>" class="mt-2"><strong>Итого: <%= category[i].price %> руб.</strong></p>
                  </div>
                </div>
                

                <div class="modal fade" id="detailsModal<%= currentId %>" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel<%= currentId %>" aria-hidden="true"> 
                  <div class="modal-dialog" role="document"> 
                    <div class="modal-content"> 
                      <div class="modal-header"> 
                        <h5 class="modal-title" id="detailsModalLabel<%= currentId %>"><%= category[i].name %></h5> 
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"> 
                          <span aria-hidden="true">&times;</span> 
                        </button> 
                      </div> 
                      <div class="modal-body"> 
                        <!-- Здесь вы можете добавить дополнительные поля из базы данных --> 
                        <p><%= category[i].description %></p> 
                        <p>Цена: <%= category[i].price %> руб.</p> 
                        <p>Бесплатная доставка: <%= category[i].inStock ? 'Да' : 'Нет' %></p> 
                        <p>Дата выпуска: <%= category[i].releaseDate %></p> 
                        <p>Время размещения объявления: <%= category[i].createdAt %></p>
                        <p>Вес: <%= category[i].weight %></p> 
                        <p>Скидка: <%= category[i].discountPercentage %>%</p> 
                        <p>Наличие: <%= category[i].availability %></p> 
                      </div> 
                      <div class="modal-footer"> 
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button> 
                      </div> 
                    </div> 
                  </div> 
                </div>
            


              </div>
            </div>
          <% } %> 
        <% } %>
      
    <br/><br/><br/>
  </div>
